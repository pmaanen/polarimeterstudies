
# Sets some default verbose
#
/control/verbose 1
/control/saveHistory
/run/verbose 0
#
# create empty scene
#
/vis/scene/create
/vis/open OGLS
#/vis/viewer/set/style solid
/vis/viewer/set/viewpointThetaPhi 90 0
/vis/viewer/zoom 10
/vis/drawVolume 
/vis/scene/add/axes 0 0 0 3 cm
# global
/vis/viewer/set/culling  global  true
# invisible
/vis/viewer/set/culling  invisible  true
/vis/heprep/setCullInvisibles true
/vis/viewer/set/hiddenEdge 1
/vis/viewer/set/hiddenMarker 1
/vis/scene/add/trajectories
/vis/scene/add/hits
#############Dont draw photons
/vis/filtering/trajectories/create/particleFilter
/vis/filtering/trajectories/particleFilter-0/add gamma
/vis/filtering/trajectories/particleFilter-0/invert true
############## for test 
#/gun/position 0 1 .3 m
#/gun/direction 0 -1 0
#/gun/particle proton
#/gun/energy 232 MeV
################################
/tracking/storeTrajectory 1
/vis/scene/endOfEventAction accumulate 1
/vis/viewer/flush
